			<key name="homepage_og_description" />
			<key name="homepage_twitter_description" />
			<key name="pta">
				<key name="*">
					<key name="doctitle" />
					<key name="description" />
					<key name="social_image_url" />
					<key name="canonical" />
					<key name="redirect" />
					<key name="og_title" />
					<key name="tw_title" />
					<key name="og_description" />
					<key name="tw_description" />
				</key>
			</key>
		</key>
	</admin-texts>
</wpml-config>
